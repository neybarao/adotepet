<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<!-- Always force latest IE rendering engine or request Chrome Frame -->
		<meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
		<link rel="icon" href="/images/favicon.png" type="image/x-icon">

		<!-- Use title if it's in the page YAML frontmatter -->
		<title><%= current_page.data.title || "AdotePet" %></title>

		<meta property='og:locale' content='pt_BR'/>
		<meta property="og:title" content="AdotePet" />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="http://www.adotepet.co" />
		<meta property="og:image" content="http://neyricardo.github.io/adotepet/images/banner.png" />
		<meta property="og:image:type" content="image/png">
		<meta property="og:site_name" content="AdotePet" />
		<meta property="og:description" content="Quer doar ou adotar um bichinho de estimação? Nós ajudamos!" />


		<link href='http://fonts.googleapis.com/css?family=Roboto:400,300,500,700' rel='stylesheet' type='text/css'>
		<link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>

		<%= stylesheet_link_tag "normalize", "bootstrap/css/bootstrap.min", "font-awesome/css/font-awesome.min", "stylesheet", "slider/css/slider" %>
		<%= javascript_include_tag  "jquery.min", "all", "/stylesheets/bootstrap/js/bootstrap.min", "slider/js/bootstrap-slider" %>
		<!--[if lt IE 9]>
		<%= javascript_include_tag  "dist/html5shiv.min" %>
		<![endif]-->
	</head>

	<body class="<%= page_classes %>">
		<nav>
			<div class="text-center">
				<%= image_tag 'adotepet-logo.png', :width => '240', :class => 'logo-adotepet' %>
			</div>
		</nav>

		<div class="container">
			<%= yield %>
		</div>

		<footer>
			<div id="footer" class="text-center">

			</div>
		</footer>

		<script>
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-30020866-2', 'auto');
			ga('send', 'pageview');

		</script>
	</body>
</html>
